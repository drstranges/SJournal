<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ff0057aa"

    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/blank_style_margin_left"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#B0C4DE">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#008B8B"
                android:columnCount="4"
                android:padding="@dimen/grid_layout_padding_2dp"
                android:rowCount="4">

                <Button
                    android:id="@+id/blank_topic"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_gravity="fill"
                    android:layout_row="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/fragment_blank_style_topic"/>

                <Button
                    android:id="@+id/blank_num_top"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="1"
                    android:minWidth="@dimen/btn_small_min_width"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/symbol_num"/>

                <Button
                    android:id="@+id/blank_name_top"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="1"
                    android:minWidth="@dimen/btn_medium_min_width"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/fio"/>

                <Button
                    android:id="@+id/blank_class_top"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="1"
                    android:minWidth="@dimen/btn_medium_min_width"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/study_class"/>

                <Button
                    android:id="@+id/blank_add_column"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:layout_rowSpan="3"
                    android:minWidth="@dimen/btn_small_min_width"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="+"/>

                <Button
                    android:id="@+id/blank_num_body"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2"
                    android:text="1...n"/>

                <Button
                    android:id="@+id/blank_name_body"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2"
                    android:text="@string/fio"/>

                <Button
                    android:id="@+id/blank_class_body"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="2"
                    android:text="@string/mark"/>

                <Button
                    android:id="@+id/blank_absent_row"
                    style="@style/ChoiceButtonBarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/blank_absent_row"/>
            </GridLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                android:text="@string/bg_color_blank"
                android:id="@+id/textView"
                android:layout_marginTop="@dimen/view_to_view_vertical_margin"
                android:background="#F0F8FF"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1"
                android:spinnerMode="dialog"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                android:text="@string/bg_color_table"
                android:layout_marginTop="@dimen/view_to_view_vertical_margin"
                android:background="#F0F8FF"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:spinnerMode="dialog"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
                android:text="@string/current_profile"
                android:layout_marginTop="@dimen/view_to_view_vertical_margin"
                android:background="#F0F8FF"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:spinnerMode="dialog"/>

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                <!--android:id="@+id/view_current_profile"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:layout_marginTop="2dp"-->
                <!--android:background="#F0F8FF"/>-->

            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ChoiceButtonBarButton"
                android:layout_marginTop="@dimen/view_group_to_view_group_vertical_margin_large"
                android:layout_marginBottom="@dimen/view_to_view_vertical_margin"
                android:text="@string/save_changes"/>

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ChoiceButtonBarButton"
                android:text="@string/delete_profile"/>

            <Button
                android:id="@+id/button_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ChoiceButtonBarButton"
                android:text="@string/close"/>

            <!--<Button-->
                <!--android:id="@+id/button_load"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--style="@style/ChoiceButtonBarButton"-->
                <!--android:text="@string/load"/>-->


        </LinearLayout>
    </ScrollView>

</LinearLayout>